<h1>List of Photos</h1>

<hr>
  <form action = "/insert_photo">
    <label for="url">Image</label>
    <input id="url" placeholder="Enter a URL for the image" name="query_image" >

    <label for="caption">Caption</label>
    <textarea id="caption" name="query_caption"></textarea>

    <label for="id">Owner ID</label>
    <input id="id" placeholder="Enter User ID" name="query_owner_id" >
  
    <button>Add photo</button>
  </form>
<hr>
<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @list_of_photos.each do |a_photo|   %>
  <tr>
    <td>
      <img src="<%= a_photo.image %>">
    </td>
     
    <td>
      <%= a_photo.caption %>
    </td>

    <td>
      <%= a_photo.poster.username %>
    </td>

    <td>
      <%= a_photo.created_at %>
    </td>

    <td>
      <a href="/photos/<%= a_photo.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end  %>
</table>
