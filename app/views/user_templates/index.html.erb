<h1>List of useres</h1>

<form action="/add_user/">
  <label for="username">Username</label>
  <input placeholder="enter a username.." id="username" name="query_user">
  <button>Add user</button>

</form>
<table border=""1>
  <tr>
    <th>
      Id
    </th>
    <th>
      Username
    </th>
    <th>
      
    </th>
  </tr>

  <% @list_of_users.each do |a_user|  %>
  <tr>
    <td>
      <%= a_user.id %>
    </td>
    <td>
      <%= a_user.username %>
    </td>
    <td>
      <a href="/users/<%= a_user.username %>">Show Details</a>
    </td>
  </tr>


  <% end %>
</table>
